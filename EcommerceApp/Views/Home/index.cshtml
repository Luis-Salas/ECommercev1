@using EcommerceApp.Models
@model List<User>
<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>Ecomerce App</title>
    </head>
    <body>
        <div class="header">
            <h1>Home page </h1>
            <h2>welcome to EcommerceApp @ViewBag.FirstName</h2>
            <a href="/">Home</a><br>
            <a href="/ContentCreator">seller please register</a><br>
            <a href="/login">Login</a><br>
            <a href="/search">Search</a><br>
        </div>

        <div class="sellers">
            <h4>checkout a sellers store</h4>
            @foreach(var user in Model)
            {
                <a href="/UserPage/@user.UserId">@user.FirstName @user.LastName</a>
            }
        </div>
    </body>

</html>
